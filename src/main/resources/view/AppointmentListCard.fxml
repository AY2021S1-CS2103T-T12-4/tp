<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="90.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <Label fx:id="appointmentId" styleClass="cell_small_label" text="\$appointment number" wrapText="true" />
         <Label fx:id="date" styleClass="cell_big_label" text="\$date" wrapText="true">
            <minWidth>
               <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
         </Label>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="startTime" styleClass="cell_big_label" text="\$startTime">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="endTime" styleClass="cell_big_label" text="\$endTime" wrapText="true" />
      </HBox>
      <Label fx:id="name" styleClass="cell_small_label" text="\$patient name" wrapText="true" />
      <Label fx:id="patientNric" styleClass="cell_small_label" text="\$patientId" wrapText="true" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
